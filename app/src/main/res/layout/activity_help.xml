<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGreyBg"
    tools:context=".Help">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Need Help ?"
                    android:textColor="@color/colorAccent"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alloy_bold"
                    android:layout_marginStart="22dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Here are some FAQs for you"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alloy_bold"
                    android:layout_marginStart="22dp"/>

            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:onClick="showHideOrderEnquiryHelpBtn">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Enquiry"
                            android:textColor="@color/colorLightBlack"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/help_order_enquiry_image_view_show_hide"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/alloy_bold"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/help_order_enquiry_image_view_show_hide"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGreyBg"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="30dp"
                        android:paddingEnd="20dp"
                        android:id="@+id/help_order_enquiry_linear_layout_list"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="How can I track my order?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:onClick="orderQueryOneBtn"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="How do I cancel my order?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:onClick="orderQueryTwoBtn"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Items are missing from my order?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="I want to modify my order?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Items are different from what I ordered?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="How can I do online payment?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGreyBg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:onClick="showHideDeliveryHelpBtn">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delivery"
                            android:textColor="@color/colorLightBlack"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/help_delivery_image_view_show_hide"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/alloy_bold"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/help_delivery_image_view_show_hide"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGreyBg"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="30dp"
                        android:paddingEnd="20dp"
                        android:id="@+id/help_delivery_linear_layout_list"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Order status shows 'Delivered' but i have not received my order?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Which cities do we operate in?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Can I modify my address after I have placed my order?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGreyBg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:onClick="showHidePaymentHelpBtn">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payments"
                            android:textColor="@color/colorLightBlack"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/help_payments_image_view_show_hide"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/alloy_bold"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/help_payments_image_view_show_hide"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGreyBg"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="30dp"
                        android:paddingEnd="20dp"
                        android:id="@+id/help_payments_linear_layout_list"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="What are the payment modes?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="When will I get refund?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="How can I make an online payment?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGreyBg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:onClick="showHideReturnHelpBtn">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Returns"
                            android:textColor="@color/colorLightBlack"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/help_returns_image_view_show_hide"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/alloy_bold"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/help_returns_image_view_show_hide"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGreyBg"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="30dp"
                        android:paddingEnd="20dp"
                        android:id="@+id/help_returns_linear_layout_list"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="How do I return my order?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Which medicines are eligible for return?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="I am unable to initiate a return request?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Does MedNow pick up the products I want to return from my location?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGreyBg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:onClick="showHideWalletBtn">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MedNow Wallet"
                            android:textColor="@color/colorLightBlack"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/help_wallet_image_view_show_hide"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/alloy_bold"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/help_wallet_image_view_show_hide"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorGreyBg"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="30dp"
                        android:paddingEnd="20dp"
                        android:id="@+id/help_wallet_linear_layout_list"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="What is MNO cash?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Can I add money to MedNow wallet?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="When will my cash expire?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorGreyBg"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Can I transfer MNO cash to bank account?"
                            android:gravity="center_vertical"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/ic_comment"
        app:tint="@color/colorWhite"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="mailToCareBtn"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_phone"
        app:tint="@color/colorWhite"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="callToCareBtn"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>