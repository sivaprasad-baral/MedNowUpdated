<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/home_fragment_image_view_pharmacy_image" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:text="3.5"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/home_fragment_text_view_pharmacy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_toRightOf="@id/home_fragment_image_view_pharmacy_image"
                android:text="apollo pharmacy"
                android:textColor="@color/colorAccent"
                android:layout_marginStart="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_fragment_text_view_pharmacy_address"
                android:text="CRP colony,BBSR"
                android:layout_below="@id/home_fragment_text_view_pharmacy_name"
                android:layout_toRightOf="@id/home_fragment_image_view_pharmacy_image"
                android:layout_marginStart="15dp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_fragment_text_view_reaching_time"
                android:layout_below="@id/home_fragment_text_view_pharmacy_address"
                android:layout_toRightOf="@id/home_fragment_image_view_pharmacy_image"
                android:text="7 min"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:id="@+id/reaching_time_and_distance_separator"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/home_fragment_text_view_pharmacy_address"
                android:layout_toRightOf="@id/home_fragment_text_view_reaching_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_fragment_text_view_distance"
                android:layout_below="@id/home_fragment_text_view_pharmacy_address"
                android:layout_toRightOf="@id/reaching_time_and_distance_separator"
                android:text="0.9 km"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                />


            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:id="@+id/view"
                android:layout_below="@+id/home_fragment_text_view_reaching_time"
                android:layout_toRightOf="@id/home_fragment_image_view_pharmacy_image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discount"
                android:layout_below="@id/view"
                android:text="MEDNOW50"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/home_fragment_image_view_pharmacy_image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:text="50% Discount"
                android:textSize="15sp"
                android:layout_marginRight="2dp"
                android:layout_alignParentEnd="true"
                />

        </>

    </androidx.cardview.widget.CardView>

</RelativeLayout>