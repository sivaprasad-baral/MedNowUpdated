<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadPrescription"
    android:padding="20dp"
    android:background="@color/colorGreyBg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/upload_image_view_prescription"
        android:layout_above="@id/upload_btn_send_prescription"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/upload_btn_send_prescription"
        android:layout_marginTop="20dp"
        android:text="Send Prescription"
        android:onClick="sendBtn"/>

</RelativeLayout>