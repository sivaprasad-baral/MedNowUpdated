<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGreyBg"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:fontFamily="@font/alloy_bold"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/view_order_text_view_med_price"
                android:id="@+id/view_order_text_view_med_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:fontFamily="@font/alloy_bold"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/view_order_layout_qty"
                android:id="@+id/view_order_text_view_med_price"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/view_order_image_close_btn"
                android:id="@+id/view_order_layout_qty">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_indeterminate_check_box_black_24dp"
                    android:id="@+id/view_order_image_subtract_btn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorAccent"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:fontFamily="@font/alloy_bold"
                    android:layout_gravity="center"
                    android:id="@+id/view_order_text_view_qty"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_box_black_24dp"
                    android:id="@+id/view_order_image_add_btn"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/view_order_image_close_btn"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>